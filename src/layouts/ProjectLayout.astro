---
import NavDetail from "../components/NavDetail.astro";
import ImageSlider from "../components/image-slider.vue";
export interface Props {
	title: string;
}

const { frontmatter } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<script src="https://kit.fontawesome.com/03fca1712c.js" crossorigin="anonymous"></script>
		<title>{frontmatter.title}</title>
		<link rel="stylesheet" href="/main.css" />
	</head>
	<body class="flex flex-col min-h-screen">
	<header>
		<NavDetail />
	</header>
	<main class="text-fuchsia-dark bg-fuchsia flex-grow">

		<div class="container py-20 mx-auto">
			<h1 class="text-fuchsia-dark font-heading text-5xl inline-block mb-10">
				{frontmatter.title}
			</h1>
			
			<slot></slot>
			<div class="mt-10">
				<ImageSlider client:visible images={frontmatter.images.map(i => i.image)} />
			</div>
		</div>

	</main>
	
		<footer class="bg-primary">
			<div class="flex py-10 container">
				<div class="ml-auto text-white text-right flex items-center">
					Opulent Co. 2023 All rights reserved. <img class="ml-4 w-8"  src="/pearl.png" alt="logo pearl" />
				</div>
			</div>
		</footer>
	</body>
</html>
